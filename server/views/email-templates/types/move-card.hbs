<div style="padding:20px; background:#18181b; border:1px solid #3f3f46; border-radius:8px;">
  <div style="margin-bottom:16px;">
    <table role="presentation" cellpadding="0" cellspacing="0">
      <tr>
        <td style="width:32px; height:32px; text-align:center; vertical-align:middle; padding-right:12px;">
          {{#if actor_avatar_url}}
            <img src="{{actor_avatar_url}}" alt="{{actor_name}}" style="width:32px; height:32px; border-radius:50%; object-fit:cover; display:block;">
          {{else}}
            <div style="width:32px; height:32px; background:#3b82f6; border-radius:50%; display:table-cell; text-align:center; vertical-align:middle; font-family:Arial,sans-serif; font-size:12px; font-weight:600; color:#ffffff; text-rendering:optimizeLegibility; -webkit-font-smoothing:antialiased;">{{actor_initials}}</div>
          {{/if}}
        </td>
        <td style="vertical-align:middle; padding-left:8px;">
          <div style="font:600 14px/20px -apple-system,Segoe UI,Roboto,Arial,sans-serif; color:#ffffff;">
            {{actor_name}}
          </div>
          <div style="font:400 12px/18px -apple-system,Segoe UI,Roboto,Arial,sans-serif; color:#a1a1aa;">
            {{email_action_moveCard}}
          </div>
        </td>
      </tr>
    </table>
  </div>
  <div style="padding:16px; background:#27272a; border:1px solid #3f3f46; border-radius:8px; text-align:center;">
    <div style="font:600 14px/20px -apple-system,Segoe UI,Roboto,Arial,sans-serif; color:#ffffff; margin-bottom:8px;">
      {{email_label_cardMovement}}
    </div>
    <div style="font:400 14px/22px -apple-system,Segoe UI,Roboto,Arial,sans-serif; color:#d4d4d8;">
      <span style="color:#ef4444;">{{from_list}}</span> 
      <span style="margin:0 8px; color:#a1a1aa;">â†’</span> 
      <span style="color:#10b981;">{{to_list}}</span>
    </div>
  </div>
</div>
